<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <CheckBoxPreference
        android:key="@string/pref_continue_reading"
        android:title="Продолжить чтение"
        android:summary="Запомнить место где вы остановились и начать с него при запуске"
        android:defaultValue="true"
        android:enabled="false"/>
    <EditTextPreference
        android:key="@string/pref_text_size"
        android:title="Размер шрифта"
        android:summary="Устанавливает размер шрифта"
        android:defaultValue="16"
        android:dialogTitle="Введите размер шрифта (от 10 до 26)"
        android:inputType="number"/>
</PreferenceScreen>
